include ../GLOBAL/global.mk

PACKAGE_NAME=		openssl
PACKAGE_VERSION=	0.9.6b

PACKAGE_DESCRIPTION=	OpenSSL
PACKAGE_VENDOR=		The OpenSSL Project
PACKAGE_CATEGORY=	system

DIST_FILES=		${PACKAGE_NAME}-${PACKAGE_VERSION}.tar.gz

CONFIGURE_PROGRAM=	./config
CONFIGURE_ARGS=		--prefix=${INSTALL_PREFIX} --openssldir=/etc/ssl \
			threads shared

MAKE_FAKE_ARGS=		INSTALL_PREFIX=${FAKE_DIRECTORY} \
			MANDIR=${INSTALL_PREFIX}/man

